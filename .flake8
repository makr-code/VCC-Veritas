[flake8]
# Flake8 Configuration

max-line-length = 127
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    .tox,
    .pytest_cache,
    htmlcov,
    .mypy_cache

# Ignore specific errors (no inline comments here)
ignore =
    E203
    E266
    E501
    W503
    W504
    F401
    E402

# Error codes to always report
select = 
    E
    W
    F
    C
    N

per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

# Count errors
count = True
statistics = True
show-source = True
