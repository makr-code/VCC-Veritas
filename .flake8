[flake8]
# Flake8 Configuration

max-line-length = 127
max-complexity = 10

# Exclude patterns (comma-separated)
exclude = .git, __pycache__, .venv, venv, .eggs, *.egg, build, dist, migrations, .tox, .pytest_cache, htmlcov, .mypy_cache

# Ignore specific error codes
ignore = E203, E266, E501, W503, W504, F401, E402

# Error codes to always report
select = E,W,F,C,N

# Per-file ignores
per-file-ignores = __init__.py:F401,F403, tests/*:F401,F811, backend/agents/veritas_api_agent_orchestrator.py:C901

# Count errors
count = True
statistics = True
show-source = True
